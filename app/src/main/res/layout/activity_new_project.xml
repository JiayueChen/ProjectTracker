<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#6699ff"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textview_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"          
            android:gravity="center"
            android:text="Project View"
            android:textColor="#ffffff"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Project Number:"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/project_umber_editText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ems="10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Course Title:"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/course_title_EditText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ems="10" >
        </EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Course Number:"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/course_num_EditText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ems="10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Instructor Name:"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/instructor_name_EditText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ems="10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Due Date:"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/due_date_editText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ems="10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Project Description:"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/project_description_EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.63"
            android:ems="10"
            android:inputType="textMultiLine" />        "
        
        <Button
            android:id="@+id/button_addproject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#99cc33"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="Add"
            android:textColor="#ffffff" />
        
     
        
      
    </LinearLayout>

</LinearLayout>