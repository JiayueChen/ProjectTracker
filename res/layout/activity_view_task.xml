<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#6699ff"
        android:orientation="vertical" >

        <TextView           
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Task View"
            android:textColor="#ffffff"
            android:textSize="30sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textview_task_view_taskdesription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Task Desription:"
        android:textSize="20sp" />

    <TextView
          android:id="@+id/textview_task_view_datetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Date/Time:"
        android:textSize="20sp" />

    <TabHost
        android:id="@+id/tabhost1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="416dp"
            android:orientation="vertical" >

            <TabWidget
                android:id="@android:id/tabs"
               android:background="#6699ff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </TabWidget>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <LinearLayout
                    android:id="@+id/tab11"
                    android:layout_width="match_parent"
                    android:layout_height="150dp" >

                    <ListView
                        android:id="@+id/task_view_listView_student"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                    </ListView>
                    
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tab12"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" >
                    
                       <ListView
                        android:id="@+id/task_view_listView_task_schedule"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                    >
                    </ListView>
                    
                </LinearLayout>
               
            </FrameLayout>
        </LinearLayout>
    </TabHost>
    
    
    
      <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"   
        android:layout_gravity="bottom"
        android:orientation="horizontal">

         
    <Button
        android:id="@+id/button_task_view_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"        
        android:background="#99cc33"
        android:text="Edit"
        android:layout_weight="1"
        android:textColor="#ffffff" />
      <Button
        android:id="@+id/button_task_view_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:background="#99cc33"
        android:layout_weight="1"
        android:text="Delete"
        android:textColor="#ffffff" />     
        <Button
        android:id="@+id/button_task_view_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:background="#99cc33"
        android:layout_weight="1"
        android:text="Done"
        android:textColor="#ffffff" />
        <Button
        android:id="@+id/button_task_view_export"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:background="#99cc33"
        android:layout_weight="1"
        android:text="Export"
        android:textColor="#ffffff" />

    </LinearLayout>
    
   

    

</LinearLayout>